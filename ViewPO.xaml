<Window x:Class="MainSIMS.ViewPO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainSIMS"
        mc:Ignorable="d"
        Title="ViewPO" Height="356.383" Width="432">
    <Grid Background="Azure">

        <ListView Name="lvUsers" Margin="10,51,10,67" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Supplier" Width="90" DisplayMemberBinding="{Binding Supplier}" />
                    <GridViewColumn Header="SCU" Width="80" DisplayMemberBinding="{Binding Scu}" />
                    <GridViewColumn Header="Name" Width="110" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Price" Width="60" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Quantity" Width="60" DisplayMemberBinding="{Binding Quantity}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Image x:Name="image" Source="Images/db.jpeg" Opacity="0.1" HorizontalAlignment="Left" Height="300" VerticalAlignment="Top" Width="475" Margin="-15,16,-36,0"/>
        <Label x:Name="label" Content="Total, $:" HorizontalAlignment="Left" Margin="48,278,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="104,278,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="button" Content="Place Order" HorizontalAlignment="Left" Margin="290,278,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="button1" Content="Export to PDF" HorizontalAlignment="Left" Margin="255,16,0,0" VerticalAlignment="Top" Width="86"/>
        <Button x:Name="button2" Content="Print Order" HorizontalAlignment="Left" Margin="346,16,0,0" VerticalAlignment="Top" Width="68"/>
        <Button x:Name="button3" Content="Add" HorizontalAlignment="Left" Margin="199,16,0,0" VerticalAlignment="Top" Width="51"/>
        <Label x:Name="label1" Content="Product:" HorizontalAlignment="Left" Margin="10,16,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="23" Margin="69,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
